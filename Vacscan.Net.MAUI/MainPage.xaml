<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI"
             x:Class="Vacscan.Net.MAUI.MainPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <GridLayout RowDefinitions="1*,3*,1*">

        <zxing:CameraBarcodeReaderView
			GridLayout.Row="0" GridLayout.RowSpan="3"
			x:Name="barcodeView"
			BarcodesDetected="BarcodesDetected" />

        <GridLayout
			GridLayout.Row="0"
			BackgroundColor="#aa000000">
            <Label GridLayout.Row="2" x:Name="Message" Text="No message" HorizontalOptions="Center" VerticalOptions="Center" TextColor="White" />
        </GridLayout>

        <GridLayout
			GridLayout.Row="2"
			BackgroundColor="#aa000000"
			Padding="20"
			ColumnDefinitions="Auto,*,Auto">

            <Button Text="SWITCH" GridLayout.Column="0" BackgroundColor="#aa000000" CornerRadius="8" BorderColor="Black" Clicked="SwitchCameraButton_Clicked" />


            <Button Text="TORCH" GridLayout.Column="2" BackgroundColor="#aa000000" CornerRadius="8" BorderColor="Black" Clicked="TorchButton_Clicked" />
        </GridLayout>

    </GridLayout>
</ContentPage>
